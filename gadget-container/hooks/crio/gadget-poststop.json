{
  "version": "1.0.0",
  "hook": {
    "path": "/bin/sh",
    "args": [
      "sh",
      "-c",
      "test ! -x /opt/hooks/oci/{{.namespace}}-gadget/poststop.sh || /opt/hooks/oci/{{.namespace}}-gadget/poststop.sh {{.namespace}}"
    ]
  },
  "when": {
    "always": true
  },
  "stages": [
    "poststop"
  ]
}
